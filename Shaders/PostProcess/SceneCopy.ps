struct PS_In
{
	float4 clipPos : SV_POSITION;
	float2 texCoord : TEXCOORD;
};

Texture2D DiffuseMap;
Texture2D DepthMap;
SamplerState Sampler;

struct PS_Out
{
	float4 color : SV_TARGET;
	float depth : SV_DEPTH;
};

PS_Out main(PS_In pIn)
{
	PS_Out pOut;
	pOut.color = DiffuseMap.Sample(Sampler, pIn.texCoord);
	pOut.depth = DepthMap.Sample(Sampler, pIn.texCoord);
	return pOut;
}